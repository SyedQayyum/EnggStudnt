@{
    ViewBag.Title = "CollegeDetails";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div id="PageBody" style="display:none">

    <div class="content college-details-page">

        <div class="ad-placeholder">
            <img src="~/images/ad4.gif" alt="" id="topAdvertisement" />
        </div>

        <div class="content-desc">

            <div class="college-details" id="collegeDetails">
                <div class="college-logo">
                    <img data-bind="attr:{src:collLogo,alt:collName,title:collName}" />
                </div>
                <div class="college-desc">
                    <h3 data-bind="text:collName"></h3>

                    <h4 data-bind="text:collAddress"></h4>

                    <div class="college-desc-list">
                        <ul>
                            <li>Ph: <span data-bind="text:collPhone"></span></li>
                            <li>Fax: <span data-bind="text:collFax"></span></li>
                            <li>Email : <span><a data-bind="attr:{href:collEmail}"><span data-bind="text:collEmail"></span></a></span></li>
                        </ul>
                        <ul>
                            <li>Estd: <span data-bind="text:collStablishedYear">1999</span></li>
                            <li>
                                Rating: <div class="rating rating2">
                                    <span class="star_rating_small">
                                        <span class="star star-red star-xl">
                                            <span data-bind="style:{width:collRating}"></span>
                                        </span>
                                    </span>
                            </li>
                            <li>Url : <span><a data-bind="attr:{href:collWebsite}" target="_blank"><span data-bind="text:collWebsite"></span></a></span></li>
                        </ul>
                        <div class="clear"></div>
                    </div>

                    <div class="college-courses">
                        <span>Courses Offered : </span>
                        <!--ko text:coursesOffered-->
                        <!--/ko-->
                    </div>

                </div>
                <div class="clear"></div>
            </div>

            <!-- modal -->
            <div class="modal fade" id="write-review" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog">
                    <div class="modal-content modal-content2">

                        <button type="button" class="close popup-close2" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                        <div class="social_media">
                            <ul>
                                <li>
                                    <a href="#" class="btn btn-block btn-social btn-lg btn-facebook">
                                        <i class="fa fa-facebook"></i> Sign in Facebook
                                    </a>
                                </li>
                                <li>OR</li>
                                <li>
                                    <a href="#" class="btn btn-block btn-social btn-lg btn-google">
                                        <i class="fa fa-google-plus"></i> Sign in Google
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="modal-body">
                            <div class="contact-form popup-form reviews-form">
                                <form name="Review form" method="post">

                                    <div>
                                        <span><input type="text" name="FirstName" class="textbox" placeholder="Review Title"></span>
                                    </div>

                                    <div>
                                        <span class="span-txt">Rate College Placement</span>
                                        <div class="rating rating3">
                                            <div class="stars">
                                                <form>
                                                    <input class="star star-5" id="Placementstar-5" type="radio" name="star" />
                                                    <label class="star star-5" for="Placementstar-5"></label>
                                                    <input class="star star-4" id="Placementstar-4" type="radio" name="star" />
                                                    <label class="star star-4" for="Placementstar-4"></label>
                                                    <input class="star star-3" id="Placementstar-3" type="radio" name="star" />
                                                    <label class="star star-3" for="Placementstar-3"></label>
                                                    <input class="star star-2" id="Placementstar-2" type="radio" name="star" />
                                                    <label class="star star-2" for="Placementstar-2"></label>
                                                    <input class="star star-1" id="Placementstar-1" type="radio" name="star" />
                                                    <label class="star star-1" for="Placementstar-1"></label>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <span class="span-txt">Rate College Faculty</span>
                                        <div class="rating rating3">
                                            <div class="stars">
                                                <form>
                                                    <input class="star star-5" id="Facultystar-5" type="radio" name="star" />
                                                    <label class="star star-5" for="Facultystar-5"></label>
                                                    <input class="star star-4" id="Facultystar-4" type="radio" name="star" />
                                                    <label class="star star-4" for="Facultystar-4"></label>
                                                    <input class="star star-3" id="Facultystar-3" type="radio" name="star" />
                                                    <label class="star star-3" for="Facultystar-3"></label>
                                                    <input class="star star-2" id="Facultystar-2" type="radio" name="star" />
                                                    <label class="star star-2" for="Facultystar-2"></label>
                                                    <input class="star star-1" id="Facultystar-1" type="radio" name="star" />
                                                    <label class="star star-1" for="Facultystar-1"></label>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <span class="span-txt">Rate College Environment</span>
                                        <div class="rating rating3">
                                            <div class="stars">
                                                <form>
                                                    <input class="star star-5" id="Lifestar-5" type="radio" name="star" />
                                                    <label class="star star-5" for="Lifestar-5"></label>
                                                    <input class="star star-4" id="Lifestar-4" type="radio" name="star" />
                                                    <label class="star star-4" for="Lifestar-4"></label>
                                                    <input class="star star-3" id="Lifestar-3" type="radio" name="star" />
                                                    <label class="star star-3" for="Lifestar-3"></label>
                                                    <input class="star star-2" id="Lifestar-2" type="radio" name="star" />
                                                    <label class="star star-2" for="Lifestar-2"></label>
                                                    <input class="star star-1" id="Lifestar-1" type="radio" name="star" />
                                                    <label class="star star-1" for="Lifestar-1"></label>
                                                </form>
                                            </div>
                                        </div>
                                    </div>


                                    <div>
                                        <span><textarea class="textbox textareabox" placeholder="Share your experience at the college, help other aspirants make a good choice"></textarea></span>
                                    </div>

                                    <div style="text-align:center;">
                                        <span><input type="submit" name="submit" class="submit-btn" value="Submit"></span>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->



            <div class="view-college-reviews" id="collegeReviews">
