                                    <select class="textbox">
                                        <option>Select State</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                            </div>
                            <div style="text-align:right;">
                                <span>
                                    <input type="submit" name="submit" id="submit" value="Send">
                                    <button type="button" class="btn btn-default popup-close" data-dismiss="modal">Cancel</button>
                                </span>
