@model ES.ValueObjects.QsPaperVO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>
        Create Qs Paper
    </h3>
    <hr />
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-md-2">Branch</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.branchId, Model.Branches, "- Select -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.branchId, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2">Semester</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.semesterId, Model.Semesters, "- Select -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.semesterId, "", new { @class = "text-danger" })
            </div>>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Subject</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.subId, Model.Subjects, "- Select -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.subId, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2">Year</label>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.qsYear, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.qsYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Qs Heading</label>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.qsHeading, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.qsHeading, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-md-2">Page Order</label>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.qsPageOrder, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.qsPageOrder, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Regular Qs Content</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.qsContentRegular, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.qsContentRegular, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Supplementary Qs Content</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.qsContentSupplementary, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.qsContentSupplementary, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "../QsPaperAdmin/Index")
    </div>
